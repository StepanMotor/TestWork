<Page x:Class="TestWork.View.Pages.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestWork.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StartPage">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Тест по дисциплине" 
                   Grid.Column="1" 
                   Grid.Row="2" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   FontSize="40"/>
        <TextBlock Text="«Экономика отрасли»" 
                   Grid.Column="1" 
                   Grid.Row="4" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   FontSize="40"/>

        <Button Name="TeacherBtn" 
                Content="Преподаватель" 
                Grid.Column="1"
                Grid.Row="6"
                Width="328" 
                Height="41"
                Click="TeacherBtn_Click"  
                FontSize="22"/>
        <Button Name="StudentBtn" 
                Content="Студент" 
                Grid.Column="1" 
                Grid.Row="8"
                Width="328" 
                Height="41"
                Click="StudentBtn_Click" 
                FontSize="22"/>
    </Grid>
</Page>
