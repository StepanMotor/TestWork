<Page x:Class="TestWork.View.Pages.ChoisePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestWork.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="1200"
      Title="ChoisePage">

    <Grid Background="White">
        <StackPanel x:Name="StackPanel1" Orientation="Vertical" Margin="350, 50, 350, 50">
            <TextBlock Text="Выберите группу" FontSize="30"/>

            <ComboBox Name="CmbGroup" FontWeight="bold" FontSize="30" SelectionChanged="CmbGroup_SelectionChanged"/>
            <TextBlock Text="Выберите студента" FontSize="30"/>
            <ComboBox  x:Name="CmbStudent" FontWeight="Bold" FontSize="30"/>
            <TextBlock Text="Выберите тест" FontSize="30"/>
            <ComboBox Name="CmbTest" FontWeight="Bold" FontSize="30"/>
            <Button Content="Начать" Name="BtnStart"  FontSize="30" FontWeight="Bold" Margin="10,50,10,10" Click="BtnStart_Click_1"/>

        </StackPanel>
    </Grid>
</Page>
