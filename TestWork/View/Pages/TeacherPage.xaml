<Page x:Class="TestWork.View.Pages.TeacherPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestWork.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="1200"
      Title="TeacherPage">

    
        <Grid Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="1" Margin="0 30 0 0">
                <Button x:Name="AddStudentBtn"  Content="Добавить студента" FontSize="20" FontWeight="SemiBold"  Width="350" Height="50" Click="AddStudentBtn_Click"/>
                <Button x:Name="AddGroupBtn"  Content="Добавить группу" FontSize="20" FontWeight="SemiBold"  Width="350" Height="50" Margin="0 20 0 0" Click="AddGroupBtn_Click"/>
                <Button x:Name="ListStudentWithMarkBtn"  Content="Список студентов с оценками" FontSize="20" FontWeight="SemiBold"  Width="350" Height="50" Margin="0 20 0 0" Click="ListStudentWithMarkBtn_Click"/>
                <Button x:Name="DeleteStudent" Content="Удалить студента" FontSize="20" FontWeight="SemiBold"  Width="350" Height="50" Margin="0 20 0 0" Click="DeleteStudent_Click"/>
                <Button x:Name="BackToStartBtn"  Content="Выйти в главное меню" FontSize="20" FontWeight="SemiBold"  Width="350" Height="50" Margin="0 20 0 0" Click="BackToStartBtn_Click"/>
            </StackPanel>
        </Grid>
    
</Page>
